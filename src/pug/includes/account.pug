// account
.account
    button.account__head
        img(src="img/content/avatar.jpg" alt="")
    .account__body
        button.button-circle.button-medium.account__close
            +i('close-fat')
        .account__user
            .account__avatar
                img(src="img/content/avatar.jpg" alt="")
            .account__details
                .account__man.h3 Dash
                .account__login @randomdash
        .account__wallet
            .account__top
                .account__title Connected wallet
                .account__actions
                    a.account__action(href="settings.html#wallet")
                        +i('settings-alt')
                        | Manage wallet
                    button.account__action
                        +i('close-square')
                        | Disconnect
            .account__description
                .account__code 0x1e86...533B
                .account__line.h3
                    .account__crypto 3.345 ETH
                    .account__price $5,448
        .account__menu
            +link(classLinkAccountMyProfile, "profile.html", "My profile")
            +link(classLinkAccountSettings, "settings.html", "Settings")
            +link(classLinkAccountHelp, "help.html", "Help")